<% if @design_options.any? %>
    <table class="index" id='listing_design_options' data-hook>
      <colgroup>
        <col style="width: 60%"/>
        <col style="width: 40%"/>
      </colgroup>
      <tbody>
      <% @design_options.each do |option| %>
          <tr id="<%= spree_dom_id option %>" data-hook="customization_row">
            <td class="align-center"><%= option.name %></td>
            <td class="actions">
              <% if can?(:update, option) %>
                  <%= link_to_edit option, url: edit_admin_design_configuration_design_option_path(@design_configuration, option), :no_text => true %>
              <% end %>
              <% if can?(:destroy, option) %>
                  <%= link_to_delete option, url: edit_admin_design_configuration_design_option_path(@design_configuration, option), :no_text => true %>
              <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

<%= link_to "Add", new_admin_design_configuration_design_option_path(@design_configuration), class: 'button' %>

