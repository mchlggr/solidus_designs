<%= render :partial => 'spree/admin/shared/product_tabs', :locals => {:current => 'Personlization'} %>
<%= render :partial => 'spree/shared/error_messages', :locals => {:target => @design_configuration} %>

<% content_for :page_title do %>
    New Design Configuration
<% end %>

<% content_for :page_actions do %>
    <li>
      <%= button_link_to Spree.t(:back_to_design_configurations_list), admin_product_design_configurations_url(@product), :icon => 'arrow-left' %>
    </li>
<% end %>

<%= form_for [:admin, @product, @design_configuration] do |f| %>
  <fieldset>
    <legend align="center"><%= t('spree.new_design_configuration') %></legend>
    <%= render :partial => 'form', :locals => {:f => f} %>
    <%= render :partial => 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
